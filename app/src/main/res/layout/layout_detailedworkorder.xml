<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <TextView
        android:id="@+id/detailedWO_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:id="@+id/detailedWO_ivImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/ic_baseline_image_24"
        android:layout_below="@id/detailedWO_tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvLocationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailedWO_ivImage"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:text="Location:"/>


    <TextView
        android:id="@+id/detailedWO_tvLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLocationLabel"
        android:text="123 Maple Street"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/tvDescriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailedWO_tvLocation"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:text="Description:"/>

    <TextView
        android:id="@+id/detailedWO_tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDescriptionLabel"
        android:text="description"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/tvTenantLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailedWO_tvDescription"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:text="Submitted by:"/>

    <TextView
        android:id="@+id/detailedWO_tvTenant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTenantLabel"
        android:layout_marginStart="10dp"
        android:text="tenant"/>

    <Button
        android:id="@+id/detailedWO_btnGeneric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button"
        android:layout_below="@id/detailedWO_tvTenant"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:background="@drawable/rounded_corners"/>

</RelativeLayout>